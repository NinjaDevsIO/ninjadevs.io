function ninjadevsio_add_thumb_column($cols) {
  $cols['ninjadevsio_post_thumb'] = __('Featured');
  return $cols;
}

function tcb_display_post_thumbnail_column($col, $id) {
  switch($col){
    case 'ninjadevsio_post_thumb':
      if( function_exists('the_post_thumbnail') )
        echo the_post_thumbnail( 'thumb' );
      else
        echo 'Not supported in theme';
      break;
  }
}

add_filter('manage_posts_columns', 'ninjadevsio_add_thumb_column', 999);
add_filter('manage_pages_columns', 'ninjadevsio_add_thumb_column', 999);

add_action('manage_posts_custom_column', 'tcb_display_post_thumbnail_column', 999, 2);
add_action('manage_pages_custom_column', 'tcb_display_post_thumbnail_column', 999, 2);
